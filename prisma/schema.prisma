generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  lastName      String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  identification String?  @unique
  phone         String?   @unique
  password      String?
  role          String    @default("USER")
  balance       Float     @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  payments      Payment[]
  tickets       Ticket[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Ticket {
  id         String   @id @default(cuid())
  number     String
  serialCode String   @unique @default(uuid())
  status     String   @default("AVAILABLE")
  userId     String?
  drawId     String?
  updatedAt  DateTime @updatedAt
  draw       Draw?    @relation(fields: [drawId], references: [id])
  user       User?    @relation(fields: [userId], references: [id])

  @@unique([number, drawId])
}

model Payment {
  id           String   @id @default(cuid())
  amount       Float
  proofImage   String
  status       String   @default("PENDING")
  adminComment String?
  createdAt    DateTime @default(now())
  telegramMessageIds String? // JSON string of [{chatId, messageId}]
  userId       String
  user         User     @relation(fields: [userId], references: [id])
}

model Draw {
  id            String   @id @default(cuid())
  date          DateTime
  winningNumber String?
  prizeImage    String?
  prizeTitle    String?
  prizeDescription String?
  prizeAmount   Float?
  ticketPrice   Float    @default(2.0)
  status        String   @default("OPEN")
  tickets       Ticket[]
}
